<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h1>Reigai &bull; Sign in</h1>
    </div>
    <div class="well">
      <%= bootswatch_flash %>
      <%= form_tag login_path do %>
        <div class="input-group form-group">
          <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email' %>
          <span class="input-group-addon"><i class="icon-envelope"></i></span>
        </div>
        <div class="input-group form-group">
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
          <span class="input-group-addon"><i class="icon-unlock" style="width: 14px !important;"></i></span>
        </div>
        <div class="form-group">
          <%= button_tag "Sign In", class: 'btn btn-block btn-info' %>
        </div>
        <%= link_to "Dont have an account? Create one today!", register_path%>
      <% end %>
    </div>
  </div>
</div>



