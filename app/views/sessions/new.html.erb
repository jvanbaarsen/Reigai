<h1>Sign in</h1>
<%= form_tag sessions_path do %>
  <div class="control-group">
    <div class="input-append">
      <%= text_field_tag :email, nil, placeholder: 'Email' %>
      <span class="add-on"><i class="icon-envelope-alt"></i></span>
    </div>
  </div>
  <div class="control-group">
    <div class="input-append">
      <%= password_field_tag :password, nil, placeholder: 'Password' %>
      <span class="add-on"><i class="icon-asterisk"></i></span>
    </div>
  </div>
  <div class="control-group remove-margin clearfix">
    <div class="pull-left">
      <%= link_to "Create account", sign_up_path%>
    </div>
    <div class="btn-group pull-right">
      <%= button_tag "<i class='icon-arrow-right'></i> Sign In".html_safe, class: 'btn btn-small btn-success' %>
    </div>
  </div>
<% end %>
