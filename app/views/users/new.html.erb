<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h1>Reigai &bull; Create account</h1>
    </div>
    <%= show_nice_errors(@user) %>
    <div class="well">
      <%= form_for @user, url: register_path do |f| %>
        <div class="input-group form-group <%= "has-error" if @user.errors[:full_name].present? %>">
          <%= f.text_field :full_name, class: "form-control", placeholder: "Full name" %>
          <span class="input-group-addon"><i class="icon-user"></i></span>
        </div>
        <div class="input-group form-group <%= "has-error" if @user.errors[:email].present? %>">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
          <span class="input-group-addon"><i class="icon-envelope"></i></span>
        </div>
        <div class="input-group form-group <%= "has-error" if @user.errors[:password].present? %>">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          <span class="input-group-addon"><i class="icon-unlock"></i></span>
        </div>
        <div class="input-group form-group <%= "has-error" if @user.errors[:password].present? %>">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password' %>
          <span class="input-group-addon"><i class="icon-unlock"></i></span>
        </div>
        <div class="form-group">
          <%= button_tag "Sign Up", class: 'btn btn-block btn-info' %>
        </div>
        <%= link_to "Allready have an account? Log in here", login_path%>
      <% end %>
    </div>
  </div>
</div>