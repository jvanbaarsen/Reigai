<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h1>Create a new application</h1>
    </div>
    <%= show_nice_errors(@application) %>
    <div class="well">
      <%= form_for @application, url: create_application_path do |f| %>
          <div class="form-group <%= "has-error" if @application.errors[:name].present? %>">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Application name' %>
          </div>
          <div class="form-group">
            <%= button_tag "Create application", class: 'btn btn-block btn-info' %>
          </div>
        <% end %>
    </div>

  </div>
</div>

